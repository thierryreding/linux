config DRM_GAMECUBE
	bool "gamecube"
	depends on GAMECUBE_COMMON
	depends on DRM
	select DRM_KMS_HELPER
	help
	  Choose this option if you have a Nintendo GameCube or Nintendo Wii.

if DRM_GAMECUBE

config DRM_GAMECUBE_FBDEV
	bool "Enable legacy fbdev support"
	select DRM_KMS_FB_HELPER
	select FB_SYS_FILLRECT
	select FB_SYS_COPYAREA
	select FB_SYS_IMAGEBLIT
	default y
	help
	  Choose this option if you have a need for the legacy fbdev support.
	  Note that this support also provides the Linux console on top of
	  the GameCube modesetting driver.

endif
